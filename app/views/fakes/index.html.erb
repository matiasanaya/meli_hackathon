<div id="nav">
	<div class="row">
		<h1 class="text-center">MercadoHacks</h1>
	</div>
</div>
<% @items.each do |item| %>
<div class="item">
	<a href="<%= item_path item %>">
		<div class="row">
			<div class="ten mobile-three columns title">
					<h5><%= item.meli_title %></h5>
			</div>
			<div class="two mobile-one columns status">
					<h3 class="text-center"><i class="general foundicon-<%= 'checkmark' if item.has_stock && item.stock_tracked %><%= 'remove' if !item.has_stock && item.stock_tracked%><%= 'settings' if !item.stock_tracked %>"></i></h3>
			</div>
		</div>
	</a>
</div>
<% end %>